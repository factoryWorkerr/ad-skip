{
  "manifest_version": 3,
  "name": "YouTube Ad-Speeder",
  "version": "1.0",
  "description": "Speeds up ads to 16x automatically.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Ad-Speeding Active"
  }
}
